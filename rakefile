task :default => ["Simulator.class"]

def echo_shell s
  puts s
	exec s
end

rule '.class' => '.java' do |t|
  echo_shell "javac -cp .:stdlib.jar:Jama-1.0.2.jar #{t.source}"
end

task :clean do
  echo_shell "rm *.class"
end

namespace "run_sim" do
	task :gravity_wld do
		echo_shell 'java -cp .:stdlib.jar:Jama-1.0.2.jar Simulator CarWorld.wld'
	end

	task :key_wld do
		echo_shell 'java -cp .:stdlib.jar:Jama-1.0.2.jar Simulator KeyGravity.wld'
	end

	task :mouse_follower_wld do
		echo_shell 'java -cp .:stdlib.jar:Jama-1.0.2.jar Simulator MouseFollower.wld'
	end
end



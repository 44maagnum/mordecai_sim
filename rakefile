task :default => ["Simulator.class"]

def echo_shell s
  puts s
	exec s
end

rule '.class' => '.java' do |t|
  echo_shell "javac -cp .:stdlib.jar:Jama-1.0.2.jar #{t.source}"
end

task :clean do
  echo_shell "rm *.class"
end

task :run_sim do
  echo_shell 'java -cp .:stdlib.jar:Jama-1.0.2.jar Simulator'
end


